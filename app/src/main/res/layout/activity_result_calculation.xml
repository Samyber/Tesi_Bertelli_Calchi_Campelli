<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutResultCalculation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#279E48"
    tools:context=".calculationBloodAlcohol.ResultCalculationActivity">

    <TextView
        android:id="@+id/resultTextViewResultCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alcoholContentTextViewResultCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/your_alcohol_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextViewResultCalculation" />

    <TextView
        android:id="@+id/timeStringTextViewAlcoholContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/time_for_drive"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alcoholContentTextViewResultCalculation" />

    <TextView
        android:id="@+id/timeTextViewAlcoholContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/timeStringTextViewAlcoholContent"
        app:layout_constraintStart_toStartOf="@+id/timeStringTextViewAlcoholContent"
        app:layout_constraintTop_toBottomOf="@+id/timeStringTextViewAlcoholContent" />
</androidx.constraintlayout.widget.ConstraintLayout>