<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Passages.PassagesChoiceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.widget.Button
            android:id="@+id/passageRequestButtonChoisePassages"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_button"
            android:text="@string/passage_request"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newRequestPassageButtonPassageChoice" />

        <android.widget.Button
            android:id="@+id/passageProvideButtonChoisePassages"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_button"
            android:text="@string/passage_provide"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/passageRequestButtonChoisePassages"
            app:layout_constraintStart_toStartOf="@+id/passageRequestButtonChoisePassages"
            app:layout_constraintTop_toBottomOf="@+id/passageRequestButtonChoisePassages" />

        <android.widget.Button
            android:id="@+id/recentOffertsButtonChoisePassages"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_button"
            android:text="@string/recent_offerts"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/passageProvideButtonChoisePassages"
            app:layout_constraintStart_toStartOf="@+id/passageProvideButtonChoisePassages"
            app:layout_constraintTop_toBottomOf="@+id/passageProvideButtonChoisePassages" />

        <android.widget.Button
            android:id="@+id/newRequestPassageButtonPassageChoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:text="@string/request_new_passage"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/passageRequestButtonChoisePassages"
            app:layout_constraintStart_toStartOf="@+id/passageRequestButtonChoisePassages"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>